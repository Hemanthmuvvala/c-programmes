#include<stdio.h>
int main()
{
	int a[10][10],b[10][10],c[10][10];
	int m,n,p,q;
	int i,j;
	printf("Enter the size of the Matrix A : ");
	scanf("%d%d",&m,&n);
	printf("Enter the size of the Matrix B : ");
	scanf("%d%d",&p,&q);
	if(m==p&&n==q)
	{ printf("enter the matix A");
		for(i=0;i<m;i++)
        {for(j=0;j<n;j++)
        scanf("%d",&a[i][j]);}
        printf("enter the B matrix");
        for(i=0;i<m;i++)
        {for(j=0;j<n;j++)
        scanf("%d",&b[i][j]);}
        for(i=0;i<m;i++)
        for(j=0;j<n;j++)
        {printf("%d",a[i][j]);
        printf("%d",b[i][j]);
        }
        for(i=0;i<m;i++)
        for(j=0;j<n;j++)
        {
        c[i][j]=a[i][j]+b[i][j];
        
        printf("%d\n",c[i][j]);}
        
        
        
        
		
	} else {
		printf("Matrix Addtion is not possible");
	}
}
